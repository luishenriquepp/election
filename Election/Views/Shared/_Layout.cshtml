<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body data-ng-app="electionApp">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" ng-controller="loginController">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/#/">Votação</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/#/restaurantes">Restaurantes</a></li>
                </ul>
                <div class="text-right">
                    <div ng-if="!auth">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a title="facebook" ng-click="authenticateExternalProvider('Facebook')">Facebook</a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a title="google" ng-click="authenticateExternalProvider('Google')">Google</a></li>
                        </ul>
                    </div>
                    <div ng-if="auth">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a title="Logout" ng-click="logout()">Sair</a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a>Olá, {{ email }}</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <P>Applicação desenvolvida por Luís Henrique Pacheco Paim</P>
            <p>luishenriquepp@live.com - (51) 99163-3250</p>
            <p><a href="https://www.linkedin.com/in/luishenriquepp">Linkedin</a> <a href="https://github.com/luishenriquepp">Github</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/factories")
    @Scripts.Render("~/bundles/controllers")

    @RenderSection("scripts", required: false)
</body>
</html>
